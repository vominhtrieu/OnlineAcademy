<div class="w-100 shadow-sm border-0">
  <ul class="list-group">
    <% course.sections.forEach((section, sectionNo) => { %>
    <li class="list-group-item">
      <h6 class="cursor-pointer mb-0 section-toggler">
        <span class="h-100 position-absolute">
          <i class="fa fa-chevron-down mr-2"></i>
        </span>
        <span class="pl-4"><%= section.name %></span>
      </h6>
    </li>
    <li class="list-group-item section-content">
      <ul class="list-unstyled">
        <% section.lectures.forEach(lecture => { %>
        <li class="pl-4">
          <% if (section.preview) { %>
          <button
            href="#"
            class="btn btn-link preview-toggler p-0"
            data-toggle="modal"
            data-target="#preview-video-modal"
            data-video="/videos/<%= lecture.video.path%>"
            data-extension="<%=lecture.video.extension%>"
          >
            <%= lecture.name %> - xem thá»­
          </button>
          <% } else { %> <%= lecture.name %> <% }}); %>
        </li>
      </ul>
    </li>
    <% }); %>
  </ul>
</div>
